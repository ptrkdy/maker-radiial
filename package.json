{
  "name": "maker",
  "version": "0.1.0",
  "description": "CLI tool for LeRobot demonstration recording and robot control",
  "type": "module",
  "bin": {
    "maker": "./src/index.tsx",
    "maker-mcp": "./src/mcp/server.ts"
  },
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun --watch run src/index.tsx",
    "mcp": "bun run src/mcp/server.ts",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "build:mcp": "bun build src/mcp/server.ts --outdir dist --target bun --outfile dist/mcp-server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@huggingface/hub": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "chalk": "^5.3.0",
    "figures": "^6.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "react-devtools-core": "^7.0.1",
    "serialport": "^12.0.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.1",
    "typescript": "^5.7.2"
  }
}
